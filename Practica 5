SELECT ID_MEDICOS , Avg(Sueldo),MAX(Sueldo),MIN(Sueldo)
FROM Medicos
 GROUP BY ID_MEDICOS;

 SELECT Edad , Avg(Sueldo),MAX(Sueldo),MIN(Sueldo)
FROM Medicos where Sueldo>2000
 GROUP BY Edad;

 SELECT Nombre FROM PADECIMIENTOS
WHERE Nombre='Cancer'
GROUP BY Nombre;

SELECT id_padecimiento FROM PADECIMIENTOS
WHERE Nombre='Cancer'
GROUP BY id_padecimiento;

SELECT TOP 3 * FROM Productos;

SELECT TOP 5 * FROM PADECIMIENTOS;

SELECT TOP 6 * FROM Medicos;


SELECT Nombre, AVG(edad)
FROM Medicos where Nombre='Pancho'
  GROUP BY Nombre having avg(Edad)>15;


  
SELECT Nombre, AVG(Sueldo)
FROM Medicos where Edad>40
  GROUP BY Nombre having avg(Sueldo)>300;

  
  
SELECT Nombre, AVG(edad)
FROM PACIENTE where [Apellido Paterno]='Martinez'
  GROUP BY Nombre having avg(Edad)>20;
  

  SELECT COUNT(Nombre) as Edad FROM Medicos WHERE Sueldo<2000 GROUP BY Nombre;

    SELECT COUNT(Adeuda) as Nombre FROM PACIENTE WHERE Edad<50 GROUP BY Adeuda;
